generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Manga {
  id             String    @id @default(uuid())
  title          String
  series         String
  currentChapter Int
  type           String    // "f√≠sico" ou "digital"
  scanLink       String?
  lastReadAt     DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@map("mangas")
}
